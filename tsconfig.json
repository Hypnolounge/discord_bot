{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@class/*": ["src/class/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
